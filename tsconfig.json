{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",

    "removeComments": true,
    "preserveConstEnums": true,

    "rootDir": "src",
    "outDir": ".",
    "sourceMap": true,
    "declaration": true,

    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": []
}
